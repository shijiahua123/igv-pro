.login-container {
  min-height: 100vh;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
}
.logo-container {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo-container .logo-text {
  width: 120rpx;
  height: 120rpx;
  background-color: #0F40F5;
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
}
.logo-container .title {
  margin-top: 40rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #0F40F5;
  text-align: center;
  white-space: pre-line;
}
.form-container {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}
.form-container .input-box {
  height: 100rpx;
}
.form-container .input-box .u-input__content__field {
  height: 23rpx;
  line-height: 23rpx;
  font-size: 32rpx;
  color: #333333;
}
.form-container .input-box .u-input__content {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.btn-container {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 20rpx;
}
.btn-container .login-btn {
  box-shadow: 0 8rpx 16rpx rgba(15, 64, 245, 0.25);
}
.btn-container .phone-login-btn {
  background: #F5F7FA !important;
}