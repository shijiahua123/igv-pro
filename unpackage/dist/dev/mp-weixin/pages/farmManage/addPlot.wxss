.add-plot {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}
.add-plot .add-plot-form {
  background-color: #fff;
  padding: 0 30rpx;
}
.add-plot .add-plot-form-item-label-mark {
  color: #c5493e;
}
.add-plot .add-plot-form-item-content {
  flex: 1;
}
.add-plot .add-plot-form-item-content .add-form-custom-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.add-plot .add-plot-form-item-content .add-form-custom-content-text {
  padding-right: 10rpx;
}
.add-plot .farm-id {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}
.add-plot .block-info {
  padding: 30rpx 0 20rpx;
}
.add-plot .block-info .block-header {
  margin-bottom: 12rpx;
}
.add-plot .block-info .required-label {
  font-size: 30rpx;
  color: #333;
  position: relative;
}
.add-plot .block-info .required-label::before {
  content: "*";
  color: #ff0000;
  margin-right: 4rpx;
}
.add-plot .block-info .required-mark {
  font-size: 26rpx;
  color: #999;
  margin-left: 8rpx;
}
.add-plot .block-info .block-desc {
  font-size: 26rpx;
  color: #999;
}
.add-plot .block-list .block-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}
.add-plot .block-list .block-item .block-number {
  width: 60rpx;
  font-size: 28rpx;
  color: #666;
}
.add-plot .block-list .block-item .block-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.add-plot .block-list .add-block {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  color: #2979ff;
  font-size: 28rpx;
}
.add-plot .block-list .add-block .u-icon {
  margin-right: 12rpx;
}
.add-plot .bottom-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  display: flex;
  gap: 20rpx;
}
.add-plot .bottom-buttons .u-button {
  flex: 1;
  margin: 0;
}