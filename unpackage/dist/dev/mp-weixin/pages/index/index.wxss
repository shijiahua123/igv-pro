.container {
  width: 100%;
  height: 100vh;
  position: relative;
}
.map {
  width: 100%;
  height: 100%;
}
.map .map-crosshair {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  pointer-events: none;
}
.map .map-crosshair::before, .map .map-crosshair::after {
  content: "";
  position: absolute;
  background-color: #FFFFFF;
}
.map .map-crosshair::before {
  top: 50%;
  left: 0;
  right: 0;
  height: 2rpx;
  transform: translateY(-50%);
}
.map .map-crosshair::after {
  top: 0;
  bottom: 0;
  left: 50%;
  width: 2rpx;
  transform: translateX(-50%);
}
.top-toolbar {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.top-toolbar .tool-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}
.top-toolbar .tool-box text {
  font-size: 24rpx;
  color: #333333;
}
.bottom-toolbar {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
}
.bottom-toolbar .tool-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}
.bottom-toolbar .tool-box text {
  font-size: 24rpx;
  color: #333333;
}
.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.error-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.error-container .retry-btn {
  margin-top: 20rpx;
  padding: 10rpx 30rpx;
  background-color: #0F40F5;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.info-panel {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 28rpx;
}
.popup-content {
  height: 80vh;
  background-color: #fff;
  padding: 30rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}
.popup-content .popup-header {
  text-align: center;
  margin-bottom: 30rpx;
}
.popup-content .popup-header .popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.popup-content .popup-body {
  flex: 1;
  overflow-y: auto;
}
.popup-content .popup-body .section {
  margin-bottom: 30rpx;
}
.popup-content .popup-body .section .section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.popup-content .popup-body .section .radio-group {
  display: flex;
  gap: 20rpx;
}
.popup-content .popup-body .section .radio-group .radio-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F7FA;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}
.popup-content .popup-body .section .radio-group .radio-item.active {
  border-color: #0F40F5;
  background: rgba(15, 64, 245, 0.05);
  color: #0F40F5;
}
.popup-content .popup-body .section .radio-group .radio-item text {
  font-size: 28rpx;
}
.popup-content .popup-body .section .switch-list .switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F5F7FA;
}
.popup-content .popup-body .section .switch-list .switch-item text {
  font-size: 28rpx;
  color: #333;
}
.popup-content .popup-footer {
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  background-color: #fff;
}
.popup-content .popup-footer .confirm-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #0F40F5;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 45rpx;
}