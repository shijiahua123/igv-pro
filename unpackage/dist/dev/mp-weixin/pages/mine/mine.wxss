.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}
.user-info {
  background-color: #2b5ee3;
  padding: 40rpx 30rpx;
  color: #fff;
  position: relative;
}
.user-info .avatar-wrap {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.user-info .avatar-wrap .avatar {
  width: 100%;
  height: 100%;
  background-color: #ccc;
  border-radius: 50%;
}
.user-info .avatar-wrap .edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-info .nickname {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}
.user-info .phone {
  font-size: 28rpx;
  opacity: 0.8;
}
.assets-card {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.assets-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.assets-card .card-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.assets-card .card-header .update-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.assets-card .card-header .update-time .icon {
  margin-right: 8rpx;
}
.assets-card .total-assets {
  margin-bottom: 30rpx;
}
.assets-card .total-assets .label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}
.assets-card .total-assets .number {
  font-size: 48rpx;
  font-weight: bold;
  color: #2b5ee3;
}
.assets-card .assets-detail {
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.assets-card .assets-detail .detail-item {
  flex: 1;
  text-align: center;
}
.assets-card .assets-detail .detail-item .value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}
.assets-card .assets-detail .detail-item .label {
  font-size: 26rpx;
  color: #999;
}
.assets-card .assets-list {
  display: flex;
  align-items: center;
  justify-content: center;
}
.assets-card .assets-list .list-item {
  flex: 1;
  text-align: center;
}
.assets-card .assets-list .list-item .name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.assets-card .assets-list .list-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.assets-card .assets-list .divider {
  color: #ddd;
  margin: 0 30rpx;
}
.menu-grid {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}
.menu-grid .menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.menu-grid .menu-item .icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}
.menu-grid .menu-item .label {
  font-size: 26rpx;
  color: #333;
}
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.tab-bar .tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}
.tab-bar .tab-item .icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}
.tab-bar .tab-item .label {
  font-size: 24rpx;
  color: #666;
}
.tab-bar .tab-item.active .label {
  color: #2b5ee3;
}